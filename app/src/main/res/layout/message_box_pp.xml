<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:text="Data Privacy Notice"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:textSize="14dp"
            android:text="Pilipinas Shell Foundation, Inc, (PSFI) is committed to safeguarding your privacy. This Privacy Notice describes how we process your personal data when you sign the Friends Protect Registration Form."
            app:layout_constraintTop_toBottomOf="@id/text1"
            app:layout_constraintStart_toStartOf="@id/text1" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:text="Personal Data Collection"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/text2"
            app:layout_constraintTop_toBottomOf="@+id/text2"/>

        <TextView
            android:id="@+id/text4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
android:text="Personal data we collect from you includes name, organization/office, position/designation, email/contact number, Sex at Birth, Number of Sex Partners and others as indicated in the Registration Form."
            android:textSize="14dp"
            app:layout_constraintTop_toBottomOf="@id/text3"
            app:layout_constraintStart_toStartOf="@id/text3" />



        <TextView
            android:id="@+id/text5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
android:text="Purpose for processing personal data"            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/text4"
            app:layout_constraintTop_toBottomOf="@+id/text4"/>

        <TextView
            android:id="@+id/text6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
android:text="The personal data collected from you will be processed to facilitate the implementation of the (event). This includes identity verification, scheduling and to get in touch with you for additional information."            android:textSize="14dp"
            app:layout_constraintTop_toBottomOf="@id/text5"
            app:layout_constraintStart_toStartOf="@id/text5" />


        <TextView
            android:id="@+id/text7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
android:text="Use, security, storage and retention of personal data"            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/text6"
            app:layout_constraintTop_toBottomOf="@+id/text6"/>

        <TextView
            android:id="@+id/text8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
android:text="Your personal data is maintained in a secure manner. Only authorized persons will have access to your personal data.

We have implemented policies with the objective of protecting your privacy from unauthorized access and improper use.

We regularly test, assess and evaluate the effectiveness of our security measures.

We will only keep your personal data for as long as is reasonably necessary for the purposes outlined above or to comply with legal requirements under applicable laws. Your personal data will be stored and processed in the Philippines.

We will NOT transfer or share your personal data with other persons or organizations, unless required or permitted by law"
            android:textSize="14dp"
            app:layout_constraintTop_toBottomOf="@id/text7"
            app:layout_constraintStart_toStartOf="@id/text7" />

        <TextView
            android:id="@+id/text9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:text="Your rights"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/text8"
            app:layout_constraintTop_toBottomOf="@+id/text8"/>

        <TextView
            android:id="@+id/text10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:text="You may exercise your rights, as described under the relevant data privacy law, which includes the rights to be informed, to object, access, rectify, erasure or blocking, data portability, file a complaint and the right to damages.
If you have any concerns as to how your data is processed you can contact our Data Protection officer by emailing privacy@pilipinasshellfoundation.org."
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/text9"
            app:layout_constraintTop_toBottomOf="@+id/text9"/>




        <TextView
            android:id="@+id/done"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:textColor="@color/white"
            android:background="@drawable/rounded_rectangle_blue_enabled"
            android:text="DONE"
            android:textSize="14dp"
            app:layout_constraintTop_toBottomOf="@id/text8"
            app:layout_constraintStart_toStartOf="@id/text8" />

        <TextView
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@id/done"
            app:layout_constraintStart_toStartOf="@id/done" />





    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
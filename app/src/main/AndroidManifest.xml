<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pragmanila.awrasafely">

    <application
        android:usesCleartextTraffic="true"

        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_awrasafely"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_awrasafely"
        android:supportsRtl="true"
        android:theme="@style/Theme.AwraSafely" >

        <activity android:name=".ui.splashscreen.SplashScreenActivity"
            android:label=""
            android:noHistory="true"
            android:theme="@style/Theme.AwraSafely">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.landingpage.LandingPageActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AwraSafely">
        </activity>
        <activity android:name=".ui.testingservices.TestingServicesActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AwraSafely">
        </activity>
        <activity android:name=".ui.testingservices.TestingServicesTabsActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/Theme.AwraSafely">
        </activity>

        <activity android:name=".ui.preprequest.PrepRequestActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AwraSafely">
        </activity>
        <activity android:name=".ui.preprequest.PrepRequestTabsActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/Theme.AwraSafely">
        </activity>
        <activity android:name=".ui.fcl.FCLRequestActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AwraSafely">
        </activity>
        <activity android:name=".ui.arv.ARVRequestActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AwraSafely">
        </activity>
        <activity android:name=".ui.arv.ARVRequestTabsActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/Theme.AwraSafely">
        </activity>

        <activity android:name=".ui.fcl.FCLRequestTabsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AwraSafely">
        </activity>
    </application>

</manifest>